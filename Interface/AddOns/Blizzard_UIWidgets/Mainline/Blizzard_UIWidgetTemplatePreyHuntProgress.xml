<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\Blizzard_SharedXML\UI.xsd">
	<Frame name="UIWidgetTemplatePreyHuntProgress" inherits="UIWidgetBaseTemplate" virtual="true" mixin="UIWidgetTemplatePreyHuntProgressMixin">
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="StateTexture">
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BACKGROUND">
				<Texture parentKey="Glow" atlas="ui-prey-targeticon-glow" useAtlasSize="true" alpha="0">
					<KeyValues>
						<KeyValue key="ignoreInLayout" value="true" type="boolean"/>
					</KeyValues>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.StateTexture"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="PriorStateTexture" atlas="ui-prey-targeticon-regular" useAtlasSize="true" alpha="0">
					<KeyValues>
						<KeyValue key="ignoreInLayout" value="true" type="boolean"/>
					</KeyValues>					
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.StateTexture"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="HighlightTexture" atlas="ui-prey-targeticon-hover" useAtlasSize="true" alpha="0.2" alphaMode="ADD" hidden="true">
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.StateTexture"/>
					</Anchors>					
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="ShineFrame">
				<Size x="100" y="100"/>
				<Anchors>
					<Anchor point="CENTER" relativeKey="$parent.StateTexture"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture parentKey="Shine" alphaMode="ADD" atlas="ui-prey-targeticon-shine" useAtlasSize="true">
							<Anchors>
								<Anchor point="CENTER" x="0" y="-50"/>
							</Anchors>
						</Texture>
						<MaskTexture parentKey="Mask" atlas="ui-prey-targeticon-mask" useAtlasSize="true" vWrapMode="CLAMPTOBLACKADDITIVE" hWrapMode="CLAMPTOBLACKADDITIVE">
							<Anchors>
								<Anchor point="CENTER" x="0" y="4"/>
							</Anchors>
							<MaskedTextures>
								<MaskedTexture childKey="Shine"/>
							</MaskedTextures>
						</MaskTexture>
					</Layer>
				</Layers>
				<Animations>
					<AnimationGroup parentKey="Anim" setToFinalAlpha="true">
						<Translation childKey="Shine" duration="1.75" order="1" startDelay="0.5" smoothing="IN" offsetX="0" offsetY="200"/>
						<Scale childKey="Mask" duration="0.35" order="1" startDelay="0.35" smoothing="IN" fromScaleX="1" fromScaleY="1" toScaleX="1.1" toScaleY="1.1"/>
						<Scale childKey="Mask" duration="0.35" order="1" startDelay="0.7" smoothing="OUT" fromScaleX="1" fromScaleY="1" toScaleX="0.909091" toScaleY="0.909091"/>
					</AnimationGroup>
				</Animations>
			</Frame>
		</Frames>
		<Animations>
			<AnimationGroup parentKey="GainProgressAnim" setToFinalAlpha="true">
				<Scale childKey="StateTexture" duration="0.35" order="1" startDelay="0.35" smoothing="IN" fromScaleX="1" fromScaleY="1" toScaleX="1.1" toScaleY="1.1"/>
				<Scale childKey="StateTexture" duration="0.35" order="1" startDelay="0.75" smoothing="OUT" fromScaleX="1" fromScaleY="1" toScaleX="0.909091" toScaleY="0.909091"/>
				<Alpha childKey="Glow" duration="1" order="1" fromAlpha="0" toAlpha="0.5"/>
				<Alpha childKey="Glow" duration="1" order="1" startDelay="1" fromAlpha="0.5" toAlpha="0"/>
				<Scale childKey="PriorStateTexture" duration="0.35" order="1" startDelay="0.35" smoothing="IN" fromScaleX="1" fromScaleY="1" toScaleX="1.1" toScaleY="1.1"/>
				<Scale childKey="PriorStateTexture" duration="0.3" order="1" startDelay="0.7" smoothing="OUT" fromScaleX="1" fromScaleY="1" toScaleX="0.909091" toScaleY="0.909091"/>
			</AnimationGroup>
			<AnimationGroup parentKey="TransitionAnim" setToFinalAlpha="true">
				<Alpha childKey="PriorStateTexture" duration="0.3" order="1" fromAlpha="1" toAlpha="1"/>
				<Alpha childKey="PriorStateTexture" duration="1" order="1" startDelay="0.3" smoothing="OUT" fromAlpha="1" toAlpha="0"/>
				<Alpha childKey="StateTexture" duration="0.2" order="1" fromAlpha="0" toAlpha="1"/>
			</AnimationGroup>
		</Animations>
		<Scripts>
			<OnMouseDown method="OnMouseDown"/>
			<OnMouseUp method="OnMouseUp"/>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
		</Scripts>
	</Frame>
</Ui>
