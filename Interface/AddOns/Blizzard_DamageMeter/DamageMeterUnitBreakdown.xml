<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\Blizzard_SharedXML\UI.xsd">
	<Frame name="DamageMeterUnitBreakdownTemplate" mixin="DamageMeterUnitBreakdownMixin" virtual="true">
		<Size x="400" y="200"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Header" atlas="ui-damagemeters-header-bar">
					<Anchors>
						<Anchor point="TOPLEFT"/>
						<Anchor point="TOPRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString parentKey="Name" inherits="NumberFontNormal" justifyH="LEFT" text="PH - Header">
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.Header"  x="20"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button parentKey="ClosePanelButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" relativeKey="$parent.Header" x="-20" y="-2"/>
				</Anchors>
			</Button>
			<Frame parentKey="ScrollBox" inherits="WowScrollBoxList">
				<Anchors>
					<!-- Anchored dynamically in lua-->
				</Anchors>
			</Frame>
			<EventFrame parentKey="ScrollBar" inherits="MinimalScrollBar">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.ScrollBox" relativePoint="TOPRIGHT" x="5" y="-4"/>
					<Anchor point="BOTTOMLEFT" relativeKey="$parent.ScrollBox" relativePoint="BOTTOMRIGHT" x="5" y="4"/>
				</Anchors>
			</EventFrame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<OnHide method="OnHide"/>
			<OnEvent method="OnEvent"/>
		</Scripts>
	</Frame>
</Ui>
