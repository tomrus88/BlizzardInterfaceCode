<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\Blizzard_SharedXML\UI.xsd">
	<Frame name="DamageMeterSourceWindowTemplate" mixin="DamageMeterSourceWindowMixin" resizable="true" virtual="true">
		<Size x="400" y="200"/>
		<ResizeBounds>
			<minResize>
				<AbsDimension x="250" y="120"/>
			</minResize>
			<maxResize>
				<AbsDimension x="800" y="800"/>
			</maxResize>
		</ResizeBounds>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Background" atlas="damagemeters-background" alpha="0">
					<Anchors>
						<Anchor point="TOPLEFT" x="10"/>
						<Anchor point="BOTTOMRIGHT" x="-10"/>
					</Anchors>
				</Texture>
				<Texture parentKey="Header" atlas="ui-damagemeters-header-bar">
					<Size y="32"/>
					<!-- Provided explicit height so scroll box can be resolved prior to first render. -->
					<Anchors>
						<Anchor point="TOPLEFT"/>
						<Anchor point="TOPRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString parentKey="Name" inherits="GameFontNormalMed1" justifyH="LEFT">
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.Header"  x="20"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="ScrollBox" inherits="WowScrollBoxList">
				<Anchors>
					<!-- Anchored dynamically in lua-->
				</Anchors>
			</Frame>
			<EventFrame parentKey="ScrollBar" inherits="MinimalScrollBar">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.ScrollBox" relativePoint="TOPRIGHT" x="5" y="-4"/>
					<Anchor point="BOTTOMLEFT" relativeKey="$parent.ScrollBox" relativePoint="BOTTOMRIGHT" x="5" y="4"/>
				</Anchors>
			</EventFrame>
			<Button parentKey="ResizeButton" alpha="0">
				<Size x="60" y="60"/>
				<Anchors>
					<!-- Anchored dynamically in lua-->
				</Anchors>
				<NormalTexture atlas="damagemeters-scalehandle"/>
				<HighlightTexture atlas="damagemeters-scalehandle-hover"/>
				<PushedTexture atlas="damagemeters-scalehandle-pressed"/>
			</Button>
		</Frames>
		<Animations>
			<AnimationGroup parentKey="ShowResizeButton" setToFinalAlpha="true">
				<Alpha childKey="ResizeButton" duration="0.25" order="1" fromAlpha="0" toAlpha="1" />
			</AnimationGroup>
			<AnimationGroup parentKey="ShowBackground" setToFinalAlpha="true">
				<Alpha childKey="Background" duration="0.25" order="1" fromAlpha="0" toAlpha="0.5" />
			</AnimationGroup>
			<AnimationGroup parentKey="EmphasizeScrollBar" setToFinalAlpha="true">
				<Alpha childKey="ScrollBar" duration="0.25" order="1" fromAlpha="0.3" toAlpha="1" />
			</AnimationGroup>
		</Animations>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<OnHide method="OnHide"/>
			<OnEvent method="OnEvent"/>
			<OnEnter method="OnEnter"/>
		</Scripts>
	</Frame>
</Ui>
