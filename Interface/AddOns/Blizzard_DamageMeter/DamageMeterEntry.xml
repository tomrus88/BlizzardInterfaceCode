<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\Blizzard_SharedXML\UI.xsd">
	<Button name="DamageMeterEntryTemplate" mixin="DamageMeterEntryMixin" virtual="true">
		<Size y ="24"/>
		<Frames>
			<Frame parentKey="Icon">
				<Size x="24"/>
				<Anchors>
					<Anchor point="TOP"/>
					<Anchor point="BOTTOM"/>
					<Anchor point="LEFT"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture parentKey="Icon" setAllPoints="true"/>
					</Layer>
				</Layers>
			</Frame>
			<StatusBar parentKey="StatusBar">
				<BarTexture atlas="UI-HUD-CoolDownManager-Bar" setAllPoints="true"/>
				<Anchors>
					<Anchor point="TOP"/>
					<Anchor point="BOTTOM"/>
					<Anchor point="LEFT" relativeKey="$parent.Icon" relativePoint="RIGHT"/>
					<Anchor point="RIGHT"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture atlas="ui-damagemeters-bar-shadowbg">
							<Anchors>
								<Anchor point="TOPLEFT" x="0" y="0"/>
								<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<Texture atlas="ui-damagemeters-bar-shadowedge">
							<Anchors>
								<Anchor point="TOPLEFT" x="0" y="0"/>
								<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<FontString parentKey="Value" inherits="NumberFontNormal" justifyH="LEFT" text="PH - Value">
							<Anchors>
								<Anchor point="RIGHT" x="-8"/>
							</Anchors>
						</FontString>
						<FontString parentKey="Name" inherits="NumberFontNormal" justifyH="LEFT" text="PH - Name">
							<Anchors>
								<Anchor point="LEFT" x="5"/>
								<Anchor point="RIGHT" relativeKey="$parent.Value" x="-25"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</StatusBar>
		</Frames>
	</Button>
</Ui>
