<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\Blizzard_SharedXML\UI.xsd">
	<Button name="RotateControlArrowButtonTemplate" mixin="RotateControlArrowButtonMixin" virtual="true">
		<!-- Expected keyValues:
		<KeyValues>
			<KeyValue key="incrementType" value="" type="global"/>
			<KeyValue key="atlas" value="" type="string"/>
		</KeyValues> -->
		<Size x="13" y="13"/>
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="Icon" setAllPoints="true" alpha="0.5" texelSnappingBias="0.0" snapToPixelGrid="false"/>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="HoverIcon" setAllPoints="true" alpha="0.8" hidden="true" texelSnappingBias="0.0" snapToPixelGrid="false"/>
				<Texture parentKey="PushedIcon" setAllPoints="true" alpha="0.4" alphaMode="ADD" hidden="true" texelSnappingBias="0.0" snapToPixelGrid="false"/>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
			<OnMouseUp method="OnMouseUp"/>
			<OnMouseDown method="OnMouseDown"/>
		</Scripts>
	</Button>

	<Frame name="RotateControlFrameTemplate" mixin="RotateControlFrameMixin" enableMouseMotion="true" ignoreParentScale="true" hidden="true" virtual="true">
		<Size x="80" y="20"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="String" inherits="Game13FontShadow">
					<Size y="20"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
					<Color color="HOUSING_EXPERT_CONTROL_TEXT_COLOR" />
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button parentKey="LeftButton" inherits="RotateControlArrowButtonTemplate">
				<KeyValues>
					<KeyValue key="incrementType" value="Enum.HousingIncrementType.RotateLeft" type="global"/>
					<!-- TODO UI: Replace with correct left/right arrow assets from Art -->
					<KeyValue key="atlas" value="common-icon-backarrow" type="string"/>
				</KeyValues>
				<Anchors>
					<Anchor point="LEFT"/>
				</Anchors>
			</Button>
			<Button parentKey="RightButton" inherits="RotateControlArrowButtonTemplate">
				<KeyValues>
					<KeyValue key="incrementType" value="Enum.HousingIncrementType.RotateRight" type="global"/>
					<KeyValue key="atlas" value="common-icon-forwardarrow" type="string"/>
				</KeyValues>
				<Anchors>
					<Anchor point="RIGHT"/>
				</Anchors>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<OnHide method="OnHide"/>
			<OnEvent method="OnEvent"/>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
		</Scripts>
	</Frame>
</Ui>