<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\Blizzard_SharedXML\UI.xsd">

	<Frame name="EncounterTimelineEventFrameTemplate" mixin="EncounterTimelineEventFrameMixin" hidden="true" virtual="true">
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<OnHide method="OnHide"/>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
		</Scripts>
	</Frame>

	<Frame name="EncounterTimelineTextWithIconEventFrameTemplate" inherits="EncounterTimelineEventFrameTemplate" mixin="EncounterTimelineTextWithIconEventFrameMixin" enableMouseMotion="true" enableMouseClicks="false" virtual="true">
		<Size x="35" y="35"/>
		<Layers>
			<!-- Sublevel here needs to be lower than the zero level used for the pip on the parent timeline view. -->
			<Layer level="OVERLAY" textureSubLevel="-1">
				<Texture parentKey="Trail" atlas="combattimeline-line-icontrail" mixin="EncounterTimelineOrientedTextureMixin" useAtlasSize="true" alphaMode="ADD" alpha="0"/>
			</Layer>
			<Layer level="OVERLAY">
				<FontString parentKey="NameText" inherits="SystemFont_Shadow_Med3" mixin="AutoScalingFontStringMixin" hidden="true" wordwrap="false" nonspacewrap="false" justifyH="RIGHT">
					<!-- Anchors managed dynamically. -->
					<Size x="200"/>
				</FontString>
				<FontString parentKey="StatusText" inherits="SystemFont_Shadow_Med3" mixin="AutoScalingFontStringMixin" hidden="true" wordwrap="false" nonspacewrap="false" justifyH="RIGHT">
					<!-- Anchors managed dynamically. -->
					<Size x="200"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="IconContainer" inherits="EncounterTimelineEventIconTemplate"/>
			<Frame parentKey="Indicators" inherits="EncounterTimelineIndicatorIconGridTemplate">
				<!-- Anchors managed dynamically. -->
				<Size x="35" y="35"/>
			</Frame>
			<Cooldown parentKey="Countdown" drawBling="false" drawEdge="false" drawSwipe="false" hideCountdownNumbers="false" minimumCountdownDuration="0">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.IconContainer"/>
					<Anchor point="BOTTOMRIGHT" relativeKey="$parent.IconContainer"/>
				</Anchors>
			</Cooldown>
		</Frames>
		<Animations>
			<AnimationGroup parentKey="FinishAnimation" inherits="TargetsHiddenOnFinishedAnimGroupTemplate">
				<Alpha fromAlpha="1" toAlpha="0" duration="0.2"/>
				<Scale childKey="IconContainer" smoothing="OUT" fromScaleX="1" toScaleX="1.35" fromScaleY="1" toScaleY="1.35" duration="0.2"/>
			</AnimationGroup>
			<AnimationGroup parentKey="CancelAnimation" inherits="TargetsHiddenOnFinishedAnimGroupTemplate">
				<Alpha fromAlpha="1" toAlpha="0" duration="0.2"/>
			</AnimationGroup>
			<AnimationGroup parentKey="IntroAnimation" setToFinalAlpha="true">
				<Alpha parentKey="Fade" fromAlpha="0" toAlpha="1" duration="0.2"/>
			</AnimationGroup>
			<AnimationGroup parentKey="PulseAnimation" looping="REPEAT">
				<Scale childKey="IconContainer" smoothing="IN" fromScaleX="1.0" toScaleX="1.1" fromScaleY="1.0" toScaleY="1.1" duration="0.2" order="1"/>
				<Scale childKey="IconContainer" smoothing="OUT" fromScaleX="1" toScaleX="0.9" fromScaleY="1" toScaleY="0.9" duration="0.2" endDelay="0.6" order="2"/>
			</AnimationGroup>
			<AnimationGroup parentKey="TrailAnimation" setToFinalAlpha="true">
				<Alpha childKey="Trail" fromAlpha="0" toAlpha="1" duration="2"/>
			</AnimationGroup>
		</Animations>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnShow method="OnShow"/>
			<OnHide method="OnHide"/>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
		</Scripts>
	</Frame>

	<Frame name="EncounterTimelineSpellEventFrameTemplate" inherits="EncounterTimelineTextWithIconEventFrameTemplate" mixin="EncounterTimelineSpellEventFrameMixin" virtual="true"/>
</Ui>
